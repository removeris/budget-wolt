<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="587.0" prefWidth="847.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.budgetwolt.fxControllers.MainViewController">
   <children>
      <Label fx:id="greetingMessage" layoutX="25.0" layoutY="14.0" style="-fx-font-weight: 700;" text="Placeholder">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TabPane layoutX="25.0" layoutY="44.0" prefHeight="503.0" prefWidth="797.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="usersTab" onSelectionChanged="#reloadTableData" text="Users">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="userTable" prefHeight="350.0" prefWidth="797.0">
                          <columns>
                            <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="userTypeCol" prefWidth="75.0" text="User Type" />
                              <TableColumn fx:id="usernameCol" prefWidth="75.0" text="Username" />
                              <TableColumn fx:id="passwordCol" prefWidth="75.0" text="Password" />
                              <TableColumn fx:id="nameCol" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="surnameCol" prefWidth="75.0" text="Surname" />
                              <TableColumn fx:id="addressCol" prefWidth="75.0" text="Address" />
                              <TableColumn fx:id="phoneNumCol" prefWidth="75.0" text="Phone Number" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Button layoutX="357.0" layoutY="396.0" mnemonicParsing="false" onAction="#updateUser" text="Update" />
                        <Button layoutX="226.0" layoutY="396.0" mnemonicParsing="false" onAction="#createUser" text="Create New" />
                        <Button layoutX="469.0" layoutY="396.0" mnemonicParsing="false" onAction="#deleteUser" text="Delete" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab onSelectionChanged="#reloadTableData" text="Orders">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab fx:id="menuTab" onSelectionChanged="#reloadTableData" text="Menu">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="foodList" layoutX="22.0" layoutY="22.0" prefHeight="427.0" prefWidth="211.0" />
                        <TextArea fx:id="instructionsField" layoutX="262.0" layoutY="249.0" prefHeight="200.0" prefWidth="321.0" />
                        <TextField fx:id="foodName" layoutX="264.0" layoutY="39.0" />
                        <Label layoutX="264.0" layoutY="22.0" text="Food name" />
                        <Label layoutX="264.0" layoutY="71.0" text="Ingredients" />
                        <Label layoutX="262.0" layoutY="229.0" text="Instructions" />
                        <CheckBox fx:id="spicyCheckbox" layoutX="624.0" layoutY="43.0" mnemonicParsing="false" text="Spicy?" />
                        <CheckBox fx:id="veganCheckbox" layoutX="691.0" layoutY="43.0" mnemonicParsing="false" text="Vegan?" />
                        <Button layoutX="729.0" layoutY="416.0" mnemonicParsing="false" onAction="#deleteCuisine" prefHeight="25.0" prefWidth="54.0" text="Delete" />
                        <Button layoutX="596.0" layoutY="416.0" mnemonicParsing="false" onAction="#updateCuisine" text="Update" />
                        <Button layoutX="596.0" layoutY="349.0" mnemonicParsing="false" onAction="#addCuisine" prefHeight="25.0" prefWidth="190.0" text="Add" />
                        <TextField fx:id="priceField" layoutX="423.0" layoutY="39.0" />
                        <Label layoutX="422.0" layoutY="22.0" text="Price" />
                        <ListView fx:id="ingredientsList" layoutX="262.0" layoutY="94.0" prefHeight="133.0" prefWidth="520.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
